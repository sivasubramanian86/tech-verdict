{
  "compilerOptions": {
    "target": "ES2020",
    "module": "umd",
    "lib": ["ES2020", "DOM"],
    "outDir": "./public",
    "rootDir": "./frontend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false
  },
  "include": ["frontend/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
